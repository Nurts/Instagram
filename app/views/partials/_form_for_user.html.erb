<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1><%= signed_in? ? "Edit Profile" : "Register"%></h1>
		<%= form_for @user do |f|%>
			<% if @user.errors.any? %>
				<div class="alert alert-danger"> 
					<ul>
						<% @user.errors.full_messages.each do |m|%>
							<li><%= m %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<div class="form-group">
				<%= f.text_field :username, placeholder: signed_in? ? @user.username : "Username" , class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.text_field :email, placeholder: signed_in? ? @user.email : "Email" , class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.password_field :password, placeholder: signed_in? ? 'New Password' : 'Password', class: "form-control" %>
			</div>
			<div class="form-group">
                <%= f.label :Avatar %> <br>
				<%= f.file_field :avatar, class: "form-control" %>
			</div>
			<%= f.submit signed_in? ? 'Save Changes' : 'Sign Up', class: "btn btn-primary" %>
		<% end %>
	</div>
</div>