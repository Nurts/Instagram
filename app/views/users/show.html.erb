<h1><%= @user.username%></h1>
<h2><%= @user.email%></h2>
<h4>
    <% if signed_in? && current_user.id == @user.id%>
        <%= link_to 'Edit User', edit_user_path(@user) %> <br>
        <%= link_to 'Delete User', @user, method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
</h4>
<% unless @user.avatar.attachment.nil? %>
    <%= image_tag @user.avatar%>
<% else %>
    <img src='https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder-300-grey.jpg'>
<% end %>