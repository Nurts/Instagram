<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= pretty_title(@title)%>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "partials/header"%>
    <div class="container">
      <%= render "partials/errors" %>
      <%= yield %>
    </div>
  </body>
</html>
