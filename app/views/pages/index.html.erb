<% @title = "Homepage"%>
<% if signed_in? %>
    <div class="row">
        <div class="col-md-3">
            <% if current_user.avatar.attachment%>
                <%= image_tag current_user.avatar, height: 50%>
            <% else %>
                <img src='https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder-300-grey.jpg', class = "img-fluid">
            <% end %>
            <h3><%=link_to current_user.username, user_path(current_user)%></h3>
            <%= form_for @post do |f|%>
                <div class="form-group">
                    <%= f.text_area :body, class: "form-control"%>
                </div>
                <div class="form-group">
                    <%= f.file_field :image%>
                </div>
                <%= f.submit%>
            <% end %>
        </div>
        <div class="col-md-9">
            <%= render @feed %>
        </div>
    </div>
<% else %>
    <div class="jumbotron">
		<h1>Welcome to Instagram!</h1>
		<%= link_to "Log in", login_path, class: "btn btn-primary" %> 
		<%= link_to "Sign Up", signup_path, class: "btn btn-outline-info" %>
	</div>
<% end %>

